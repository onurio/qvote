{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.ts",
    "start": "deno run --allow-net --allow-env --allow-read main.ts",
    "test": "deno test --allow-net --allow-env --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check **/*.ts",
    "check:all": "deno task lint && deno task fmt:check && deno task check && deno task test",
    "migrate": "deno run --allow-net --allow-env --allow-read db/migrate.ts",
    "setup-db": "deno run --allow-net --allow-env --allow-read db/setup.ts"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.218.2",
    "postgres": "npm:postgres@3.4.3"
  },
  "lint": {
    "include": ["**/*.ts"],
    "exclude": ["certs/", "node_modules/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["**/*.ts", "**/*.js", "**/*.json", "**/*.md"],
    "exclude": ["certs/", "node_modules/"],
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": false
  }
}
